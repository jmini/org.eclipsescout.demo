<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipsescout.demo.minifigcreator</groupId>
		<artifactId>org.eclipsescout.demo.minifigcreator.parent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../org.eclipsescout.demo.minifigcreator.parent/</relativePath>
	</parent>

	<artifactId>org.eclipsescout.demo.minifigcreator.client.test</artifactId>
	<packaging>eclipse-test-plugin</packaging>


	<build>
		<plugins>
			<!-- Start Server WAR with Cargo -->
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<executions>
					<execution>
						<id>start-container</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>start</goal>
						</goals>
					</execution>
					<execution>
						<id>stop-container</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>stop</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<deployables>
						<deployable>
							<groupId>org.eclipsescout.demo.minifigcreator</groupId>
							<artifactId>org.eclipsescout.demo.minifigcreator.server.test.product.war</artifactId>
							<type>war</type>
							<properties>
								<context>minifig</context>
							</properties>
						</deployable>
					</deployables>
				</configuration>
			</plugin>

