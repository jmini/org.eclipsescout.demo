		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.eclipsescout.demo.minifigcreator</groupId>
			<artifactId>org.eclipsescout.demo.minifigcreator.server.test.product.war</artifactId>
			<version>1.0.0-SNAPSHOT</version>
			<type>war</type>
		</dependency>
	</dependencies>
</project>
